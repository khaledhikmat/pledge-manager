@using System.Globalization

<RadzenCard>
    @* <div class="row">
        <div class="col-md-12">
            <img src="@Campaign.ImageUrl" class="card-img-top" alt="@Campaign.Name">
        </div>
    </div> *@
    <div class="row">
        <div class="col-md-12">
            <h5>@Campaign.Institution</h5>
            <h6>@Campaign.Title</h6>
        </div>
    </div>
    <hr>
    <div class="row mt-3">
        <div class="col-md-6">
            <div>Goal</div>
            <b>@Utilities.FormatAsUSD(Campaign.Goal)</b>
            <div class="mt-3">Current Fund</div>
            <b>@Utilities.FormatAsUSD(Campaign.Fund)</b>
        </div>
        <div class="col-md-6">
            <div>Pledges</div>
            <b>@(Campaign.FulfilledPledgesCount)</b>
            <div class="mt-3">Donors</div>
            <b>@(Campaign.DonorsCount)</b>
        </div>
    </div>
</RadzenCard>

@code {
    [Parameter] 
    public Campaign Campaign { get; set; } = default!;

    [Parameter] 
    public bool IsOrganizerView { get; set; } = false!;    
}